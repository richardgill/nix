# Mise shims for scripts, needed to pick up correct installed versions in bash scripts
# This file is sourced by:
#   - Bash login shells (directly)
#   - Non-interactive bash scripts (via BASH_ENV, set in ~/.zprofile)
export PATH="$HOME/.local/share/mise/shims:$PATH"

if [ -f "$HOME/.config/shell/env.sh" ]; then
  source "$HOME/.config/shell/env.sh"
fi

if [ -f "$HOME/.config/shell/aliases.sh" ]; then
  source "$HOME/.config/shell/aliases.sh"
fi
