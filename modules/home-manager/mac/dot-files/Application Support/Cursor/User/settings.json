{
  "files.insertFinalNewline": true,
  "editor.fontSize": 16,
  "files.autoSave": "onFocusChange",
  "editor.tabSize": 2,
  "files.trimTrailingWhitespace": true,
  "editor.formatOnPaste": true,
  "editor.multiCursorModifier": "alt",
  "explorer.confirmDelete": false,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "javascript.validate.enable": false,
  "workbench.editor.enablePreview": false,
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length=180"],
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.languageServer": "Default",
  "spellright.documentTypes": ["markdown", "latex", "plaintext"],
  "editor.inlineSuggest.enabled": true,
  "github.copilot.enable": {
    "*": false,
    "plaintext": true,
    "markdown": true,
    "scminput": false,
    "yaml": true
  },
  "prettier.requireConfig": true,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.printWidth": 120,
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "redhat.telemetry.enabled": false,
  "editor.renderWhitespace": "all",
  "nxConsole.showNodeVersionOnStartup": false,
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "terminal.integrated.shellIntegration.enabled": false,
  "window.zoomLevel": 1,
  "diffEditor.ignoreTrimWhitespace": false,
  "autoOpenWorkspace.enableAutoOpenIfSingleWorkspace": true,
  "editor.accessibilitySupport": "off",
  "[astro]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "window.commandCenter": false,
  "github.copilot.editor.enableAutoCompletions": true,
  "editor.cursorSurroundingLines": 8,
  "workbench.colorTheme": "Default Dark Modern",
  "window.newWindowDimensions": "maximized",
  "vim.highlightedyank.enable": true,

  "vim.normalModeKeyBindingsNonRecursive": [
    // disable d writing to register
    {
      "before": ["d"],
      "after": ["\"", "_", "d"]
    },
    {
      "before": ["D"],
      "after": ["\"", "_", "D"]
    },
    {
      "before": ["d", "d"],
      "after": ["\"", "_", "d", "d"]
    }
  ],
  "vim.leader": "<space>",
  "workbench.editor.showTabs": "single",
  // half page up and down
  "multiCommand.commands": [
    {
      "command": "multiCommand.sidebarFileOpen",
      "sequence": [
        {
          "command": "list.select"
        },
        {
          "command": "workbench.action.closeSidebar"
        }
      ]
    },
    {
      "command": "multiCommand.pageUp",
      "sequence": [
        {
          "command": "editorScroll",
          "args": {
            "to": "up",
            "by": "wrappedLine",
            "value": 32
          }
        },
        {
          "command": "cursorMove",
          "args": {
            "to": "viewPortCenter"
          }
        }
      ]
    },
    {
      "command": "multiCommand.pageDown",
      "sequence": [
        {
          "command": "editorScroll",
          "args": {
            "to": "down",
            "by": "wrappedLine",
            "value": 32
          }
        },
        {
          "command": "cursorMove",
          "args": {
            "to": "viewPortCenter"
          }
        }
      ]
    }
  ],
  "vim.useSystemClipboard": true,
  "workbench.activityBar.location": "hidden"
}
