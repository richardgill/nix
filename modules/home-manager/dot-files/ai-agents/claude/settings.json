{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "IS_CLAUDE": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Task",
      "Bash(~/Scripts/merge-pr:*)",
      "Bash(~/Scripts/auto-commit)",
      "Bash(~/Scripts/auto-commit-pr)",
      "Bash(~/Scripts/auto-pr)",
      "Bash(~/Scripts/git-pr-diff:*)",
      "Bash(~/Scripts/git-local-diff:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(pnpm:*)",
      "Bash(npm:*)",
      "Bash(yarn:*)",
      "Bash(bun:*)",
      "Bash(node:*)",
      "Bash(python:*)",
      "Bash(pip:*)",
      "Bash(docker:*)",
      "Bash(go build:*)",
      "Bash(go test:*)",
      "Bash(go doc:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(touch:*)",
      "Bash(time:*)",
      "Bash(timeout:*)",
      "Bash(chmod:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(cd:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(diff:*)",
      "Bash(mv:*)",
      "Bash(sed:*)",
      "Bash(cut:*)",
      "Bash(awk:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(test:*)",
      "Bash(wc:*)",
      "Bash(which:*)",
      "Bash(where:*)",
      "Bash(whoami)",
      "Bash(pwd)",
      "Bash(echo:*)",
      "Bash(printf:*)",
      "Bash(open:*)",
      "Bash(rm:*)",
      "Bash(true)",
      "Glob",
      "Grep",
      "Read",
      "Edit",
      "Write",
      "TodoWrite",
      "WebFetch",
      "WebSearch",
      "Bash(chezmoi:*)",
      "Bash(mise:*)",
      "Bash(bd:*)",
      "Read(~/code/reference-repos/**)",
      "Skill(brainstorming)",
      "Skill(executing-plans)",
      "Skill(implementing-plans)",
      "Skill(creating-plans)",
      "SlashCommand(/brainstorm)",
      "SlashCommand(/code-review)",
      "SlashCommand(/create-plan)",
      "SlashCommand(/implement-plan)",
      "SlashCommand(/merge-pr)",
      "SlashCommand(/pr-diff)",
      "SlashCommand(/pull-main)",
      "SlashCommand(/research)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:api.github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:githubusercontent.com)",
      "WebFetch(domain:registry.npmjs.org)",
      "WebFetch(domain:telemetry.vercel.com)",
      "WebFetch(domain:channels.nixos.org)",
      "WebFetch(domain:results-receiver.actions.githubusercontent.com)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(sudo rm -rf:*)",
      "Bash(eval:*)",
      "Bash(sudo:*)",
      "Write(/etc/**)",
      "Write(/usr/**)",
      "Write(/bin/**)",
      "Write(/sbin/**)"
    ],
    "defaultMode": "default",
    "additionalDirectories": ["~/code/reference-repos"]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "elicitation_dialog",
        "hooks": [
          {
            "type": "command",
            "command": "~/Scripts/beep"
          }
        ]
      },
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "~/Scripts/beep"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/Scripts/beep"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "allowUnsandboxedCommands": true,
    "network": {
      "allowLocalBinding": true
    },
    "excludedCommands": ["docker", "git", "gh"]
  },
  "alwaysThinkingEnabled": true,
  "feedbackSurveyState": {
    "lastShownTime": 1754325484811
  }
}
