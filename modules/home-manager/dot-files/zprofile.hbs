# Fall back to xterm-256color if terminfo not found (e.g., xterm-ghostty over SSH)
if ! infocmp "$TERM" &>/dev/null 2>&1; then
  export TERM=xterm-256color
fi

{{#if isDarwin}}
eval "$(/opt/homebrew/bin/brew shellenv)"
{{/if}}

# Mise shims for non-interactive shells (Claude Code, scripts, CI)
# Note: mise activate in .zshrc removes shims from PATH for interactive shells
eval "$(mise activate zsh --shims)"
