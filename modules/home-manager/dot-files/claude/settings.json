{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "IS_CLAUDE": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Task",
      "Bash(~/Scripts/merge-pr:*)",
      "Bash(~/Scripts/auto-commit)",
      "Bash(~/Scripts/auto-commit-pr)",
      "Bash(~/Scripts/auto-pr)",
      "Bash(~/Scripts/git-pr-diff)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(pnpm:*)",
      "Bash(npm:*)",
      "Bash(yarn:*)",
      "Bash(bun:*)",
      "Bash(node:*)",
      "Bash(python:*)",
      "Bash(pip:*)",
      "Bash(docker:*)",
      "Bash(go build:*)",
      "Bash(go test:*)",
      "Bash(go doc:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(ls:*)",
      "Bash(chmod:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(cd:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(diff:*)",
      "Bash(mv:*)",
      "Bash(sed:*)",
      "Bash(cut:*)",
      "Bash(awk:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(test:*)",
      "Bash(wc:*)",
      "Bash(which:*)",
      "Bash(where:*)",
      "Bash(whoami)",
      "Bash(pwd)",
      "Bash(echo:*)",
      "Bash(printf:*)",
      "Bash(open:*)",
      "Bash(rm:*)",
      "Bash(true)",
      "Glob",
      "Grep",
      "Read",
      "Edit",
      "Write",
      "TodoWrite",
      "WebFetch",
      "WebSearch",
      "Bash(chezmoi:*)",
      "Bash(mise:*)",
      "Bash(bd:*)",
      "Read(~/code/reference-repos/**)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(sudo rm -rf:*)",
      "Bash(eval:*)",
      "Bash(sudo:*)",
      "Write(/etc/**)",
      "Write(/usr/**)",
      "Write(/bin/**)",
      "Write(/sbin/**)"
    ],
    "defaultMode": "default"
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "elicitation_dialog",
        "hooks": [
          {
            "type": "command",
            "command": "~/Scripts/beep"
          }
        ]
      },
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "~/Scripts/beep"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/Scripts/beep"
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": true,
  "feedbackSurveyState": {
    "lastShownTime": 1754325484811
  }
}
