# Variables
$mainMod = SUPER
$hyper = CTRL ALT SHIFT SUPER
$terminal = ghostty
$browser = firefox
$jq = {{jq}}

# Monitor configuration
# Fallback for other resolutions (must come first)
monitor = ,preferred,auto,auto
# 4K monitors with 1.6667x scaling for optimal clarity
monitor = ,3840x2160,auto,1.6667

# Autostart
exec-once = waybar &
exec-once = systemctl --user restart xremap
exec-once = uwsm app -- mako
exec-once = uwsm app -- hypridle
exec-once = uwsm app -- swayosd-server
exec-once = hyprpaper &> ~/.cache/hyprpaper.log
exec-once = wl-clip-persist --clipboard both &
exec-once = wl-paste --watch cliphist store &


# Input configuration
input {
    kb_layout = us
    numlock_by_default = true
    repeat_delay = 300

    touchpad {
        natural_scroll = true
    }
}

# General settings
general {
    layout = dwindle
    gaps_in = 6
    gaps_out = 12
    border_size = 2
    no_border_on_floating = false
    resize_on_border = true
    allow_tearing = false
}

# Misc settings
misc {
    disable_autoreload = false
    disable_hyprland_logo = true
    disable_splash_rendering = true
    always_follow_on_dnd = true
    layers_hog_keyboard_focus = true
    animate_manual_resizes = false
    enable_swallow = true
    focus_on_activate = true
    new_window_takes_over_fullscreen = 2
    middle_click_paste = false
}

# Don't show 'hyprland updated' dialog
ecosystem {
    no_update_news = true
}

# Dwindle layout
dwindle {
    force_split = 2
    special_scale_factor = 1.0
    split_width_multiplier = 1.0
    use_active_for_splits = true
    pseudotile = true
    preserve_split = true
}

# Master layout
master {
    new_status = master
    special_scale_factor = 1
}

# Binds configuration
binds {
    movefocus_cycles_fullscreen = true
}

# Decoration
decoration {
    rounding = 5

    shadow {
        enabled = true
        range = 2
        render_power = 3
    }

    blur {
        enabled = true
        size = 3
        passes = 1
        vibrancy = 0.1696
    }
}

# Animations
animations {
    enabled = true

    bezier = easeOutQuint,0.23,1,0.32,1
    bezier = easeInOutCubic,0.65,0.05,0.36,1
    bezier = linear,0,0,1,1
    bezier = almostLinear,0.5,0.5,0.75,1.0
    bezier = quick,0.15,0,0.1,1

    animation = global, 1, 10, default
    animation = border, 1, 5.39, easeOutQuint
    animation = windows, 1, 4.79, easeOutQuint
    animation = windowsIn, 1, 4.1, easeOutQuint, popin 87%
    animation = windowsOut, 1, 1.49, linear, popin 87%
    animation = fadeIn, 1, 1.73, almostLinear
    animation = fadeOut, 1, 1.46, almostLinear
    animation = fade, 1, 3.03, quick
    animation = layers, 1, 3.81, easeOutQuint
    animation = layersIn, 1, 4, easeOutQuint, fade
    animation = layersOut, 1, 1.5, linear, fade
    animation = fadeLayersIn, 1, 1.79, almostLinear
    animation = fadeLayersOut, 1, 1.39, almostLinear
    animation = workspaces, 0, 0, ease
}

# Workspace rules
workspace = w[tv1], gapsout:0, gapsin:0, rounding:0, border:false
workspace = f[1], gapsout:0, gapsin:0, rounding:0, border:false

# XWayland
xwayland {
    # force_zero_scaling = true
}

# Layer rules
layerrule = dimaround, walker

# Key bindings - Application launchers with descriptions
bindd = $hyper, G, Terminal, exec, hyprctl dispatch workspace 10; pgrep $terminal || (uwsm app -- $terminal &)
bindd = $hyper, B, Files, exec, hyprctl dispatch workspace 11; pgrep -x nautilus || (uwsm app -- nautilus --new-window &)
bindd = $hyper, F, Browser, exec, hyprctl dispatch workspace 12; pgrep $browser || (uwsm app -- $browser &)
bindd = $hyper, C, ChatGPT, exec, hyprctl dispatch workspace 12; uwsm app -- $browser "https://chatgpt.com" &
bindd = $hyper, T, Activity, exec, hyprctl dispatch workspace 13; pgrep -f '$terminal.*btop' > /dev/null || (uwsm app -- $terminal --title "btop" -e btop &)
bindd = $hyper, H, 1Password, exec, hyprctl dispatch workspace 15; pgrep -x 1password || (uwsm app -- 1password &)
bindd = $hyper, S, Slack, exec, hyprctl dispatch workspace 16; pgrep -x slack || (uwsm app -- slack &)
bindd = $hyper, W, Beeper, exec, hyprctl dispatch workspace 17; pgrep -x beeper || (uwsm app -- beeper &)
bindd = $hyper, M, Music, exec, hyprctl dispatch workspace 18; pgrep -f '$terminal.*cmus' > /dev/null || (uwsm app -- $terminal --title "cmus" -e cmus &)

# Key bindings - General
bind = $mainMod, Q, killactive,

# Focus movement
bind = $mainMod, left, movefocus, l
bind = $mainMod, right, movefocus, r
bind = $mainMod, up, movefocus, u
bind = $mainMod, down, movefocus, d
bind = $mainMod, h, movefocus, l
bind = $mainMod, j, movefocus, d
bind = $mainMod, k, movefocus, u
bind = $mainMod, l, movefocus, r

# Alter Z-order
bind = $mainMod, left, alterzorder, top
bind = $mainMod, right, alterzorder, top
bind = $mainMod, up, alterzorder, top
bind = $mainMod, down, alterzorder, top
bind = $mainMod, h, alterzorder, top
bind = $mainMod, j, alterzorder, top
bind = $mainMod, k, alterzorder, top
bind = $mainMod, l, alterzorder, top

# Workspace switching
bind = $mainMod, 1, workspace, 1
bind = $mainMod, 2, workspace, 2
bind = $mainMod, 3, workspace, 3
bind = $mainMod, 4, workspace, 4
bind = $mainMod, 5, workspace, 5
bind = $mainMod, 6, workspace, 6
bind = $mainMod, 7, workspace, 7
bind = $mainMod, 8, workspace, 8
bind = $mainMod, 9, workspace, 9
bind = $mainMod, 0, workspace, 10

# Move to workspace silently
bind = $mainMod SHIFT, 1, movetoworkspacesilent, 1
bind = $mainMod SHIFT, 2, movetoworkspacesilent, 2
bind = $mainMod SHIFT, 3, movetoworkspacesilent, 3
bind = $mainMod SHIFT, 4, movetoworkspacesilent, 4
bind = $mainMod SHIFT, 5, movetoworkspacesilent, 5
bind = $mainMod SHIFT, 6, movetoworkspacesilent, 6
bind = $mainMod SHIFT, 7, movetoworkspacesilent, 7
bind = $mainMod SHIFT, 8, movetoworkspacesilent, 8
bind = $mainMod SHIFT, 9, movetoworkspacesilent, 9
bind = $mainMod SHIFT, 0, movetoworkspacesilent, 10
bind = $mainMod CTRL, c, movetoworkspace, empty

# Window control
bind = $mainMod SHIFT, left, movewindow, l
bind = $mainMod SHIFT, right, movewindow, r
bind = $mainMod SHIFT, up, movewindow, u
bind = $mainMod SHIFT, down, movewindow, d
bind = $mainMod SHIFT, h, movewindow, l
bind = $mainMod SHIFT, j, movewindow, d
bind = $mainMod SHIFT, k, movewindow, u
bind = $mainMod SHIFT, l, movewindow, r

# Window resizing
bind = $mainMod CTRL, left, resizeactive, -80 0
bind = $mainMod CTRL, right, resizeactive, 80 0
bind = $mainMod CTRL, up, resizeactive, 0 -80
bind = $mainMod CTRL, down, resizeactive, 0 80
bind = $mainMod CTRL, h, resizeactive, -80 0
bind = $mainMod CTRL, j, resizeactive, 0 80
bind = $mainMod CTRL, k, resizeactive, 0 -80
bind = $mainMod CTRL, l, resizeactive, 80 0

# Window moving
bind = $mainMod ALT, left, moveactive, -80 0
bind = $mainMod ALT, right, moveactive, 80 0
bind = $mainMod ALT, up, moveactive, 0 -80
bind = $mainMod ALT, down, moveactive, 0 80
bind = $mainMod ALT, h, moveactive, -80 0
bind = $mainMod ALT, j, moveactive, 0 80
bind = $mainMod ALT, k, moveactive, 0 -80
bind = $mainMod ALT, l, moveactive, 80 0

# Media controls
bind = ,XF86AudioPlay, exec, playerctl play-pause
bind = ,XF86AudioNext, exec, playerctl next
bind = ,XF86AudioPrev, exec, playerctl previous
bind = ,XF86AudioStop, exec, playerctl stop

# Mouse workspace switching
bind = $mainMod, mouse_down, workspace, e-1
bind = $mainMod, mouse_up, workspace, e+1

# Walker application launcher
bind = SUPER, SPACE, exec, rofi -show drun
# This is really SUPER ALT V, but xremap remaps it.
bind = CTRL ALT, V, exec, cliphist list | rofi -dmenu -display-columns 2 -sort -window-title "" | cliphist decode | wl-copy; wl-paste

# Lock screen
bind = CTRL SUPER, Q, exec, hyprlock

# Screenshots
bind = SUPER SHIFT, 4, exec, pkill slurp || hyprshot -m region --raw --freeze | satty --filename - --fullscreen --output-filename ~/Screenshots/screenshot-$(date +'%Y-%m-%d_%H-%M-%S').png --early-exit --copy-command 'wl-copy'
bind = SUPER SHIFT, 3, exec, pkill slurp || hyprshot -m output --raw --freeze | satty --filename - --fullscreen --output-filename ~/Screenshots/screenshot-$(date +'%Y-%m-%d_%H-%M-%S').png --early-exit --copy-command 'wl-copy'
bind = SUPER SHIFT, 5, exec, region=$(slurp) && wl-screenrec -g "$region" -f ~/Screenshots/recording-$(date +'%Y-%m-%d_%H-%M-%S').mp4

# Volume and brightness controls with OSD (with descriptions)
bindeld = ,XF86AudioRaiseVolume, Volume up, exec, swayosd-client --monitor "$(hyprctl monitors -j | $jq -r '.[] | select(.focused == true).name')" --output-volume raise
bindeld = ,XF86AudioLowerVolume, Volume down, exec, swayosd-client --monitor "$(hyprctl monitors -j | $jq -r '.[] | select(.focused == true).name')" --output-volume lower
bindeld = ,XF86AudioMute, Mute, exec, swayosd-client --monitor "$(hyprctl monitors -j | $jq -r '.[] | select(.focused == true).name')" --output-volume mute-toggle
bindeld = ,XF86AudioMicMute, Mute microphone, exec, swayosd-client --monitor "$(hyprctl monitors -j | $jq -r '.[] | select(.focused == true).name')" --input-volume mute-toggle
bindeld = ,XF86MonBrightnessUp, Brightness up, exec, swayosd-client --monitor "$(hyprctl monitors -j | $jq -r '.[] | select(.focused == true).name')" --brightness raise
bindeld = ,XF86MonBrightnessDown, Brightness down, exec, swayosd-client --monitor "$(hyprctl monitors -j | $jq -r '.[] | select(.focused == true).name')" --brightness lower

# Precise 1% adjustments with Alt modifier
bindeld = ALT, XF86AudioRaiseVolume, Volume up precise, exec, swayosd-client --monitor "$(hyprctl monitors -j | $jq -r '.[] | select(.focused == true).name')" --output-volume +1
bindeld = ALT, XF86AudioLowerVolume, Volume down precise, exec, swayosd-client --monitor "$(hyprctl monitors -j | $jq -r '.[] | select(.focused == true).name')" --output-volume -1
bindeld = ALT, XF86MonBrightnessUp, Brightness up precise, exec, swayosd-client --monitor "$(hyprctl monitors -j | $jq -r '.[] | select(.focused == true).name')" --brightness +1
bindeld = ALT, XF86MonBrightnessDown, Brightness down precise, exec, swayosd-client --monitor "$(hyprctl monitors -j | $jq -r '.[] | select(.focused == true).name')" --brightness -1

# Binds active in lockscreen
bindl = ,XF86AudioRaiseVolume, exec, swayosd-client --monitor "$(hyprctl monitors -j | $jq -r '.[] | select(.focused == true).name')" --output-volume raise
bindl = ,XF86AudioLowerVolume, exec, swayosd-client --monitor "$(hyprctl monitors -j | $jq -r '.[] | select(.focused == true).name')" --output-volume lower
bindl = ,XF86AudioMute, exec, swayosd-client --monitor "$(hyprctl monitors -j | $jq -r '.[] | select(.focused == true).name')" --output-volume mute-toggle
bindl = ,XF86MonBrightnessUp, exec, swayosd-client --monitor "$(hyprctl monitors -j | $jq -r '.[] | select(.focused == true).name')" --brightness raise
bindl = ,XF86MonBrightnessDown, exec, swayosd-client --monitor "$(hyprctl monitors -j | $jq -r '.[] | select(.focused == true).name')" --brightness lower
bindl = $mainMod, XF86MonBrightnessUp, exec, swayosd-client --monitor "$(hyprctl monitors -j | $jq -r '.[] | select(.focused == true).name')" --brightness +100
bindl = $mainMod, XF86MonBrightnessDown, exec, swayosd-client --monitor "$(hyprctl monitors -j | $jq -r '.[] | select(.focused == true).name')" --brightness -100

# Binds that repeat when held
binde = ,XF86AudioRaiseVolume, exec, pamixer -i 2
binde = ,XF86AudioLowerVolume, exec, pamixer -d 2

# Mouse bindings
bindm = $mainMod, mouse:272, movewindow
bindm = $mainMod, mouse:273, resizewindow

# Window rules
# hyprctl clients to find values
windowrulev2 = noborder, class:^(swayosd)$
windowrulev2 = noborder, class:^(walker)$
windowrulev2 = workspace 10, class:^(com.mitchellh.ghostty)$
windowrulev2 = tile, class:^(com.mitchellh.ghostty)$
