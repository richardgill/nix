windowrulev2 = tile, class:^(org.gnome.Nautilus|Nautilus)$
windowrulev2 = workspace 12, class:^(firefox)$
windowrulev2 = tile, class:^(firefox)$
windowrulev2 = workspace 13, title:^(btop)$
windowrulev2 = tile, title:^(btop)$
windowrulev2 = workspace 15, class:^(1Password)$
windowrulev2 = tile, class:^(1Password)$
windowrulev2 = workspace 16, class:^(Slack)$
windowrulev2 = tile, class:^(Slack)$
windowrulev2 = workspace 17, class:^(Beeper)$
windowrulev2 = tile, class:^(Beeper)$
