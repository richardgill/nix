font-family = "Hack Nerd Font"
adjust-cell-height = 12%
theme = TokyoNight
shell-integration-features = no-cursor
cursor-style = block
title = ""
window-padding-y = 10,0
resize-overlay = never

# Allow OSC52 clipboard operations without prompts for seamless copy/paste over SSH with tmux
clipboard-read = allow
clipboard-write = allow

# Linux configuration
font-size = 13
# override alt+left and alt+right for word navigation
keybind = alt+left=text:\x1bB
keybind = alt+right=text:\x1bF
# Override ghostty's built-in tab navigation to allow tmux pane navigation
keybind = ctrl+shift+left=text:\x1b[1;6D
keybind = ctrl+shift+right=text:\x1b[1;6C
# Delete to beginning of line (Cmd+Backspace equivalent)
keybind = super+backspace=text:\x17
# Delete to end of line (Cmd+Delete equivalent)
keybind = super+delete=text:\x0b
# Disable clipboard copy notifications
app-notifications = no-clipboard-copy

# more bindings https://github.com/alacritty/alacritty/issues/474#issuecomment-338803299

