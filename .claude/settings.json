{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "bash": {
      "disableSandbox": true
    },
    "allow": [
      "Bash(just:*)",
      "Bash(nix search:*)",
      "Edit(~/.local/state/yazi/**)",
      "Write(~/.local/state/yazi/**)",
      "WebFetch(domain:channels.nixos.org)",
      "WebFetch(domain:google.com)",
      "WebFetch(domain:www.google.com)",
      "WebFetch(domain:reddit.com)",
      "WebFetch(domain:www.reddit.com)",
      "Edit(/tmp/**)",
      "Write(/tmp/**)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "local-ci.sh"
          }
        ]
      }
    ]
  }
}

